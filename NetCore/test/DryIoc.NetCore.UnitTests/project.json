{
  "buildOptions": {
    "compile": [
      "../../../DryIoc.UnitTests/*.cs"
    ],
    "exclude": [
      "../../../DryIoc.UnitTests/ThrowTests.cs"
    ],
    "nowarn": [ "CS0618" ]
  },

  "dependencies": {
    "DryIoc": { "target": "project" },
    "NUnit": "3.6.0",
    "dotnet-test-nunit": "3.4.0-beta-3"
  },
  "testRunner": "nunit",

  "frameworks": {
    "netcoreapp1.1": {
      "imports": [
        "portable-net45+win8"
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "version": "1.1.0",
          "type": "platform"
        }
      }
    },
    "net451": {}
  }
}
