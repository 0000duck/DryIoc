{
  "buildOptions": {
    "compile": [
      "../../../DryIoc.UnitTests/*.cs"
    ],
    "exclude": [
      "../../../DryIoc.UnitTests/ThrowTests.cs"
    ],
    "nowarn": [ "CS0618" ]
  },

  "dependencies": {
    "DryIoc.dll": "2.6.2-netcore-rc2",
    "NUnit": "3.2.1",
    "dotnet-test-nunit": "3.4.0-alpha-2"
  },
  "testRunner": "nunit",

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dnxcore50",
        "netcoreapp1.0",
        "portable-net45+win8"
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "version": "1.0.0-*",
          "type": "platform"
        }
      }
    }
  }
}