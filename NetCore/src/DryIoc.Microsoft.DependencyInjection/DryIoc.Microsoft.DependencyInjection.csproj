<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>DryIoc adapter for Microsoft.Extensions.DependencyInjection</Description>
    <VersionPrefix>1.3.0</VersionPrefix>
    <Authors>Maksim Volkau</Authors>
    <Copyright>Copyright (c) 2017 Maksim Volkau</Copyright>
    <TargetFrameworks>net451;netstandard1.3;netstandard2.0</TargetFrameworks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>DryIoc.Microsoft.DependencyInjection</AssemblyName>
    <PackageId>DryIoc.Microsoft.DependencyInjection</PackageId>
    <PackageTags>DryIoc;Dependency Injection;DI;IoC;Asp;AspNet;vNext;AspNetCore;NetCore;DNX</PackageTags>
    <PackageReleaseNotes>
      v1.3.0:
      - added: Support for NetStandard 2.0
    </PackageReleaseNotes>
    <PackageProjectUrl>https://bitbucket.org/dadhi/dryioc</PackageProjectUrl>
    <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\DryIoc\DryIoc.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.0.0" />
  </ItemGroup>
</Project>
